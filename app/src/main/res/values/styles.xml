<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="HintText" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="InputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/colorPrimaryDarkOn</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>

    <style name="ErrorTextAppearance" parent="@android:style/TextAppearance">
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TimePickerTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/back1</item>
        <item name="colorPrimaryDark">@color/back2</item>
        <item name="colorAccent">@color/back3</item>
    </style>

    <!--<style name="Autocomplete">-->
        <!--<item name="android:colorControlNormal" >#FFF</item>-->
        <!--<item name="android:colorControlActivated">#39A2B1</item>-->
    <!--</style>-->

    <style name="CustomProgressDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:background">@color/dark_mode_background_light</item>
        <item name="colorAccent">@color/colorPrimaryDarkOn</item>
    </style>

</resources>
