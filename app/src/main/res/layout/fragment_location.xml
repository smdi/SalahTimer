<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/dark_mode_background"
    android:id="@+id/location"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:gravity="center"
        android:paddingBottom="25dp"
        android:layout_width="match_parent"
        android:background="@color/dark_mode_background"
        android:layout_height="match_parent">

        <ScrollView
            android:fillViewport="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <LinearLayout
                    android:layout_weight="1"
                    android:id="@+id/line"
                    android:background="@color/dark_mode_background"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <TextView
                        android:layout_weight="1"
                        android:textColor="@color/dark_mode_text"
                        android:layout_marginTop="@dimen/margin_20_dp"
                        android:textSize="18sp"
                        android:text="Assalamualaikum, children of adam(a.s.)"
                        android:textStyle="bold"
                        android:layout_marginLeft="@dimen/margin_20_dp"
                        android:layout_marginRight="@dimen/margin_20_dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingRight="5dp"
                        android:paddingLeft="5dp"
                        android:paddingTop="5dp"
                        />

                    <LinearLayout
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_weight="1"
                            android:textSize="14sp"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:paddingBottom="5dp"
                            android:layout_marginLeft="@dimen/margin_20_dp"
                            android:layout_marginRight="@dimen/margin_20_dp"
                            android:textColor="@color/darkgray"
                            android:text="Search prayer timings"
                            android:textAllCaps="false"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />



                        <com.tomer.fadingtextview.FadingTextView
                            android:id="@+id/share"
                            android:layout_marginRight="22dp"
                            android:textSize="12sp"
                            android:textAllCaps="true"
                            app:timeout="1000"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/back5"
                            app:texts="@array/share" />

                    </LinearLayout>



                    <AutoCompleteTextView
                        android:layout_weight="1"
                        android:id="@+id/conac"
                        android:hint="Country"
                        android:inputType="text"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="@dimen/margin_20_dp"
                        android:layout_marginRight="@dimen/margin_20_dp"
                        android:paddingLeft="10dp"
                        android:paddingTop="@dimen/margin_20_dp"
                        android:textSize="@dimen/text_size_15dp"
                        android:textColorHint="@color/darkgray"
                        android:background="@color/dark_mode_background_dark"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/dark_mode_text"
                        android:layout_centerHorizontal="true"
                        >

                        <requestFocus />
                    </AutoCompleteTextView>
                    <TextView
                        android:id="@+id/conerr"
                        android:visibility="gone"
                        android:paddingLeft="5dp"
                        android:textColor="@color/colorPrimaryDarkOn"
                        android:layout_marginLeft="@dimen/margin_20_dp"
                        android:layout_marginRight="@dimen/margin_20_dp"
                        android:text="country name required"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <AutoCompleteTextView
