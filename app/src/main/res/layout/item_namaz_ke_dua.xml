<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/tasbeehfrag"
    android:orientation="vertical"
    android:background="@drawable/bottom_curve_white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <androidx.cardview.widget.CardView
            app:cardElevation="10dp"
            android:layout_marginBottom="@dimen/margin_20_dp"
            android:layout_marginLeft="@dimen/margin_20_dp"
            android:layout_marginRight="@dimen/margin_20_dp"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/margin_20_dp"
            app:cardCornerRadius="8dp"
            android:layout_height="wrap_content">


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/dua_ka_naam"
                    android:paddingTop="7dp"
                    android:textColor="@color/back1"
                    android:layout_marginTop="5dp"
                    android:textSize="12dp"
                    android:text="Dua ka naam"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    android:layout_marginLeft="@dimen/margin_20_dp"
                    android:layout_marginRight="@dimen/margin_20_dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="5dp"
                    android:paddingLeft="5dp"
                    />

                <TextView
                    android:paddingTop="5dp"
                    android:textSize="12dp"
                    android:layout_marginBottom="5dp"
                    android:id="@+id/dua"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="10dp"
                    android:layout_marginLeft="@dimen/margin_20_dp"
                    android:layout_marginRight="@dimen/margin_20_dp"
                    android:textColor="@color/colorAccent"
                    android:text="Dua content"
                    android:textAllCaps="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </LinearLayout>

</LinearLayout>