<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/tasbeehfrag"
    android:orientation="vertical"
    android:background="@color/dark_mode_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:id="@+id/line"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:textColor="@color/darkgray"
                    android:layout_marginTop="@dimen/margin_20_dp"
                    android:textSize="18sp"
                    android:text="Assalamualaikum, children of adam(a.s.)"
                    android:textStyle="bold"
                    android:layout_marginLeft="@dimen/margin_20_dp"
                    android:layout_marginRight="@dimen/margin_20_dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="5dp"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp"
                    />

                <TextView
                    android:textSize="14sp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="5dp"
                    android:layout_marginLeft="@dimen/margin_20_dp"
                    android:layout_marginRight="@dimen/margin_20_dp"
                    android:textColor="@color/darkgray"
                    android:text="Tasbeeh counter"
                    android:textAllCaps="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>



            <androidx.cardview.widget.CardView
                app:cardElevation="10dp"
                app:cardBackgroundColor="@color/back5"
                android:layout_marginLeft="@dimen/margin_20_dp"
                android:layout_marginRight="@dimen/margin_20_dp"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/margin_20_dp"
                app:cardCornerRadius="10dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_margin="5dp"
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:layout_width="@dimen/size_of_card"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_marginTop="5dp"
                            android:gravity="center"
                            android:textColor="@color/dark_mode_text"
                            android:textAllCaps="true"
                            android:layout_weight="1"
                            android:text="dhikr count"
                            android:textStyle="bold"
                            android:textAlignment="center"
                            android:textSize="12dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:padding="5dp"
                            android:layout_margin="10dp"
                            android:layout_gravity="center"
                            android:id="@+id/counttasbeeh"
                            android:textColor="@color/dark_mode_text"
                            android:textAllCaps="false"
                            android:layout_weight="1"
                            android:text="0"
                            android:textAlignment="center"
                            android:textSize="35dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <ImageView
                            android:padding="5dp"
                            android:layout_weight="1"
                            android:src="@drawable/minus"
                            android:id="@+id/subtasbeehcount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />



                        <ImageView
                            android:padding="5dp"
                            android:layout_weight="1"
                            android:src="@drawable/reset"
                            android:id="@+id/resettasbeehcount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />




                        <ImageView

                            android:padding="5dp"
                            android:layout_weight="1"
                            android:src="@drawable/add"
                            android:id="@+id/addtasbeehcount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />


                    </LinearLayout>

                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                app:cardElevation="10dp"
                android:layout_marginBottom="@dimen/margin_20_dp"
                android:layout_marginLeft="@dimen/margin_20_dp"
                android:layout_marginRight="@dimen/margin_20_dp"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/margin_20_dp"
                app:cardCornerRadius="8dp"
                android:background="@color/dark_mode_background"
                app:cardBackgroundColor="@color/dark_mode_background_dark"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:background="@color/dark_mode_background"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:paddingTop="7dp"
                        android:textColor="@color/back1"
                        android:layout_marginTop="5dp"
                        android:textSize="12dp"
                        android:text="Hadith on Dhikr"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:layout_marginLeft="@dimen/margin_20_dp"
                        android:layout_marginRight="@dimen/margin_20_dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingRight="5dp"
                        android:paddingLeft="5dp"
                        />

                    <TextView
                        android:paddingTop="5dp"
                        android:textSize="16sp"
                        android:layout_marginBottom="5dp"
                        android:id="@+id/hadithofdhikr"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:paddingBottom="10dp"
                        android:layout_marginLeft="@dimen/margin_20_dp"
                        android:layout_marginRight="@dimen/margin_20_dp"
                        android:textColor="@color/dark_mode_text"
                        android:text="Abu Huraira reported: The Messenger of Allah, peace and blessings be upon him, said,\n\n“To declare the glory of Allah, the praise of Allah, the oneness of Allah, and the greatness of Allah is more beloved to me than anything over which the sun rises.”"
                        android:textAllCaps="false"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>


        </LinearLayout>


    </ScrollView>


</LinearLayout>